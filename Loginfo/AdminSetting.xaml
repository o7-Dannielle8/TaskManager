<UserControl x:Class="Loginfo.AdminSetting"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Loginfo"
        mc:Ignorable="d"
       d:DesignHeight="450" d:DesignWidth="800"
             Background="#FFFFFF">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="Settings"
                   FontSize="28"
                   FontWeight="Bold"
                   Foreground="#333333"
                   Margin="0,0,0,20"
                   VerticalAlignment="Top"/>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Labels -->
            <StackPanel Orientation="Vertical" Grid.Column="0" Margin="0,0,20,0" VerticalAlignment="Top">
                <TextBlock Text="Week start"
                           FontSize="18"
                           Foreground="#333333" 
                           Margin="0,0,0,20"/>
                <TextBlock Text="Notification"
                           FontSize="18"
                           Foreground="#333333" 
                           Margin="0,0,0,20"/>
            </StackPanel>

            <!-- Controls -->
            <StackPanel Orientation="Vertical" Grid.Column="1" VerticalAlignment="Top">
                <!-- Dropdown for Week Start -->
                <ComboBox Width="150"
                          Height="30"
                          FontSize="16"
                          Margin="0,0,0,20">
                    <ComboBoxItem Content="Monday" IsSelected="True"/>
                    <ComboBoxItem Content="Sunday"/>
                </ComboBox>

                <!-- Enhanced Toggle Switch -->
                <ToggleButton x:Name="NotificationToggle"
                              Width="60"
                              Height="34"
                              HorizontalAlignment="Left"
                              Margin="0,0,0,20">
                    <ToggleButton.Style>
                        <Style TargetType="ToggleButton">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ToggleButton">
                                        <Grid>
                                            <!-- Background -->
                                            <Border x:Name="ToggleBackground" 
                                                    Width="60" 
                                                    Height="34" 
                                                    CornerRadius="17" 
                                                    Background="#E0E0E0">
                                                <Border.Effect>
                                                    <DropShadowEffect ShadowDepth="0" BlurRadius="4" Opacity="0.2" />
                                                </Border.Effect>
                                            </Border>

                                            <!-- Toggle Knob -->
                                            <Ellipse x:Name="ToggleKnob" 
                                                     Width="28" 
                                                     Height="28" 
                                                     Fill="White" 
                                                     HorizontalAlignment="Left" 
                                                     Margin="3">
                                                <Ellipse.Effect>
                                                    <DropShadowEffect ShadowDepth="2" BlurRadius="5" Opacity="0.3" />
                                                </Ellipse.Effect>
                                            </Ellipse>
                                        </Grid>

                                        <!-- Triggers for Toggle Behavior -->
                                        <ControlTemplate.Triggers>
                                            <!-- Toggled ON -->
                                            <Trigger Property="IsChecked" Value="True">
                                                <Setter TargetName="ToggleBackground" Property="Background" Value="#4CAF50" />
                                                <Setter TargetName="ToggleKnob" Property="HorizontalAlignment" Value="Right" />
                                            </Trigger>
                                            <!-- Toggled OFF -->
                                            <Trigger Property="IsChecked" Value="False">
                                                <Setter TargetName="ToggleBackground" Property="Background" Value="#E0E0E0" />
                                                <Setter TargetName="ToggleKnob" Property="HorizontalAlignment" Value="Left" />
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ToggleButton.Style>
                </ToggleButton>

                <!-- Save Button -->
                <Button Content="Save"
                        Width="100"
                        Height="30"
                        Margin="0,20,0,0"
                        HorizontalAlignment="Left"
                        Click="SaveButton_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>

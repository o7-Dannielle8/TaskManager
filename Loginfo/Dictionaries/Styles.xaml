<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!--Header (H1)-->
    <Style x:Key="Heading1" TargetType="Label">
        <Setter Property="FontSize" Value="35"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="FontFamily" Value="Plus Jakarta Sans"/>
    </Style>

    <!--Button-->
    <Style x:Key="ButtonStyle" TargetType="Button">
        <!-- Default properties -->
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="HorizontalAlignment" Value="Right" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="Height" Value="45" />
        <Setter Property="Width" Value="45" />
        <Setter Property="Margin" Value="0 0 20 0" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" 
                            CornerRadius="5">
                        <StackPanel>
                            <Image Source="/Images/AddTask.png" />
                        </StackPanel>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>

        <!-- Hover and Click Triggers -->
        <Style.Triggers>
            <!-- Hover -->
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#D9D9D9" />
            </Trigger>
            <!-- Click -->
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Background" Value="#BAC8FF" />
            </Trigger>
        </Style.Triggers>
    </Style>

    <!--SearchButton-->
    <Style x:Key="SearchButton" TargetType="Button">
        <!-- Default properties -->
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" 
                        CornerRadius="5">
                        <Viewbox Height="20" Width="20">
                            <Image Source="/Images/search-icon.png"/>
                        </Viewbox>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>

        <!-- Hover and Click Triggers -->
        <Style.Triggers>
            <!-- Hover -->
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="white" />
            </Trigger>
            <!-- Click -->
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Background" Value="#BAC8FF" />
            </Trigger>
        </Style.Triggers>
    </Style>


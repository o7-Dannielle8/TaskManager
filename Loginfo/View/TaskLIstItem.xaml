<UserControl x:Class="Loginfo.View.TaskLIstItem"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Loginfo.View"
        mc:Ignorable="d"
        d:DesignHeight="197" d:DesignWidth="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="55" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="55" />
        </Grid.RowDefinitions>
        <TextBlock Text="Title"
                   Style="{StaticResource Title}"
                   Margin="20 0"
                   VerticalAlignment="Center"/>

        <!--Importance Badge-->
        <Border CornerRadius="5" Background="{StaticResource TaskListBG}" Padding="40 0"
                Height="20"
                HorizontalAlignment="Right"
                Margin="0 0 20 0">
            <TextBlock Text="Importance"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"/>

        </Border>

        <!--Description-->
        <TextBlock Text="Lorem ipsum odor amet, consectetuer adipiscing elit. Dictum curae eu eget cubilia blandit sociosqu amet ac aliquam. Curae nam sagittis himenaeos non aliquet."
                   Grid.Row="1"
                   Margin="20 0"
                   FontSize="16"
                   TextWrapping="Wrap">

        </TextBlock>

        <!--Due date-->
        <TextBlock Text="Due: 09/06/2024"
                   Grid.Row="2"
                   VerticalAlignment="Center"
                   FontSize="14"
                   Margin="20 0"/>

    </Grid>
</UserControl>
